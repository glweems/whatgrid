type GridEntry {
  id: ID! @id
  type: GridEntryType!
  amount: String!
  unit: String!
  grid: Grid!
  author: User!
}

type Grid {
  id: ID! @id
  name: String!
  entries: [GridEntry!]!
  author: User
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type User {
  id: ID! @id
  firstName: String
  lastName: String
  username: String! @unique
  email: String! @unique
  password: String!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  phoneNumber: String
  grids: [Grid!]!
  GridEntries: [GridEntry!]!
}

enum GridEntryType {
  Column
  Row
}
