{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "jsx": "preserve",
    "noEmit": true,
    "pretty": true,
    "types": [
      "react"
    ],
    "typeRoots": [
      "@types/"
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false
  },
  "files": [
    "next-env.d.ts"
  ],
  "include": [
    "./components/**/*.ts",
    "./pages/**/*.ts",
    "./hooks/**/*.ts",
    "./utils/**/*.ts",
    "./store/**/*.ts",
    "utils/helpers.tsx",
    "utils/theme.tsx",
    "utils/apollo.tsx"
  ],
  "exclude": [
    "node_modules/**/*",
    "**/*.spec.ts"
  ]
}
